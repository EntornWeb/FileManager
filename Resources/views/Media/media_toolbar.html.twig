<div class="btn-group">
    <button id="back_btn" type="button" class="btn btn-default" title="Back">
        <span class="fa fa-arrow-left"></span>
    </button>
    <button id="forward_btn" type="button" class="btn btn-default" title="Forward">
        <span class="fa fa-arrow-right"></span>
    </button>
</div>
<div class="btn-group">
    <button id="new_folder_btn" type="button" class="btn btn-default" title="New Folder">
        <span class="fa fa-plus-circle"></span>
    </button>
    <button id="upload_file_btn" type="button" class="btn btn-default" title="Upload">
        <span class="fa fa-upload"></span>
    </button>
    <button id="download_btn" type="button" class="btn btn-default" title="Download">
        <span class="fa fa-download"></span>
    </button>
</div>
<div class="btn-group">
    <button id="select_btn" type="button" class="btn btn-default" title="Select">
        <span class="fa fa-hand-o-up"></span>
    </button>
    <button id="rename_btn" type="button" title="Rename" class="btn btn-default">
        <span class="fa fa-pencil"></span>
    </button>
    <button id="copy_btn" type="button" class="btn btn-default {% if copy_file and not copy_file['cut'] %}active{% endif %}" title="{% spaceless %}
                {% if copy_file and not copy_file['cut'] %}
                    Copy file. Copied file: /uploads/{{ copy_file['display_dir'] }}/{{ copy_file['source_file'] }}
                {% else %}
                    Copy file
                {% endif %}
            {% endspaceless %}">
        <span class="fa fa-copy"></span>
    </button>
    <button id="cut_btn" type="button" class="btn btn-default {% if copy_file and copy_file['cut'] %}active{% endif %}"  title="{% spaceless %}
                {% if copy_file and copy_file['cut'] %}
                   Cut file. Copied file: /uploads/{{ copy_file['display_dir'] }}/{{ copy_file['source_file'] }}
                {% else %}
                    Cut file
                {% endif %}
            {% endspaceless %}">
        <span class="fa fa-cut"></span>
    </button>
    <button id="paste_btn" type="button" class="btn btn-default {% if not copy_file %}disabled{% else %}hasFile{% endif %}" title="{% spaceless %}
                {% if copy_file %}
                    Paste file. Copied file: /uploads/{{ copy_file['display_dir'] }}/{{ copy_file['source_file'] }}
                {% else %}
                    Paste file
                {% endif %}
            {% endspaceless %}">
        <span class="fa fa-paste"></span>
    </button>
    <button id="preview_btn" type="button" title="Display the image" class="btn btn-default">
        <span class="fa fa-image"></span>
    </button>
    <button id="info_btn" type="button" title="Show the file information" class="btn btn-default">
        <span class="fa fa-info"></span>
    </button>
    <button id="delete_btn" type="button" title="Delete" class="btn btn-default">
        <span class="fa fa-trash-o"></span>
    </button>
</div>